{
  "compilerOptions": {
    "target": "ES6",
    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "isolatedModules": true,
    "noEmitOnError": true,
    "jsx": "react",
    "baseUrl": "./",
    "outDir": "./var/build",
    "paths": {
      "@app/client/*": ["../app-client/*"],
      "@app/web/*": ["./*"],
      "@sotaoi/client/*": ["../packages/sotaoi-client"],
      "@sotaoi/omni/*": ["../packages/sotaoi-omni"]
    }
  },
  "exclude": ["./node_modules", "./var"]
}
